      <StatusEffect type="OnUse" target="This" Condition="-1.0"/>

      <sound file="alienweapon.ogg" type="OnUse" range="800.0" loop="true"/>
      
      <LightComponent LightColor="0.8,0.7,1.0,1.0" Flicker="0.5" range="500">
